  "components": {
    "schemas": {
      "ErrorDto": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "The error message"
          },
          "status": {
            "type": "string",
            "description": "The http status code"
          },
          "errors": {
            "type": "array",
            "items": {
